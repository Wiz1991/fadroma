{
  "name": "@hackbg/fadroma",
  "version": "0.0.0",
  "type": "module",
  "workspace": true,
  "packages": [
    "./ops",
    "./ops-scrt",
    "./ops-scrt-1.0",
    "./ops-scrt-1.2",
    "./tools",
    "./test"
  ],
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "documentation": "^13.2.1",
    "esmo": "^0.9.1",
    "mocha": "^8.0.1",
    "typedoc": "^0.21.6"
  },
  "dependencies": {
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.9.4",
    "@types/prettyjson": "^0.0.30",
    "@types/rimraf": "^3.0.2",
    "bignumber.js": "^9.0.1"
  },
  "scripts": {
    "docs-js": "documentation build scrt-js/** -f html --github -o doc/scrt-js",
    "docs-ts": "typedoc --out doc/typedoc --exclude **/*+(index|.spec|.e2e).ts js/sys js/net js/cli js/agent js/builder js/ensemble",
    "test-ts": "DEBUG=out esmo --async-stack-traces --enable-source-maps test/test.mjs",
    "docserv": "documentation serve --watch js/**",
    "test-rs": "cp Workspace.toml Cargo.toml; cargo test; rm Cargo.toml",
    "docs-rs": "cp Workspace.toml Cargo.toml; cargo doc ; rm Cargo.toml"
  }
}
