{
  "name":    "@hackbg/fadroma",
  "version": "22.01.0",
  "type":    "module",
  "workspace": true,
  "main": "index.ts",
  "packages": [
    "./deps/ganesha",
    "./deps/toolbox/*",
    "./deps/scrt-1.0/cosmwasm-js/packages/sdk",
    "./deps/scrt-1.2/cosmwasm-js/packages/sdk"
  ],
  "devDependencies": {
    "@ganesha/node": "workspace:*",
    "typedoc":       "^0.21.9",
    "typescript":    "^4.5.4"
  },
  "dependencies": {
    "@types/node":       "^16.11.19",
    "@fadroma/ops":      "workspace:*",
    "@fadroma/scrt":     "workspace:*",
    "@fadroma/scrt-1.0": "workspace:*",
    "@fadroma/scrt-1.2": "workspace:*",
    "bignumber.js":      "^9.0.2"
  },
  "scripts": {
    "cli": "packages/cli/fadroma",
    "docs:pan": "pandoc README.md | sed -e 's|./crates|https://github.com/hackbg/fadroma/tree/21.12/crates|' | sed -e 's|./packages|https://github.com/hackbg/fadroma/tree/21.12/packages|' > doc/index.html",
    "docs:rs":  "cp Workspace.toml Cargo.toml; cargo doc; rm Cargo.toml",
    "docs:ts":  "typedoc --out doc/typedoc --exclude **/*+(index|.spec|.e2e).ts js/sys js/net js/cli js/agent js/builder js/ensemble",
    "test:rs":  "cp Workspace.toml Cargo.toml; cargo test; rm Cargo.toml",
    "test:tap": "cd test && pnpm test",
    "test:ts":  "DEBUG=out ganesha run-module --async-stack-traces --enable-source-maps test/test.mjs"
  }
}
