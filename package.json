{
  "name": "@hackbg/fadroma-workspace",
  "version": "21.08.0",
  "main": "./index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "./js/agent",
    "./js/builder",
    "./js/cli",
    "./js/contract",
    "./js/ensemble",
    "./js/localnet",
    "./js/net",
    "./js/sys"
  ],
  "devDependencies": {
    "chai": "^4.3.4",
    "documentation": "^13.2.1",
    "mocha": "^8.0.1",
    "typedoc": "^0.21.6"
  },
  "scripts": {
    "docs-js": "documentation build scrt-js/** -f html --github -o doc/scrt-js",
    "docs-ts": "typedoc --out doc/typedoc --exclude **/*+(index|.spec|.e2e).ts js/sys js/net js/cli js/agent js/builder js/ensemble",
    "test-js": "DEBUG=out mocha --timeout 5000 --exit js/*/*.spec.js",
    "docserv": "documentation serve --watch js/**",
    "test-rs": "cp Workspace.toml Cargo.toml; cargo test; rm Cargo.toml",
    "docs-rs": "cp Workspace.toml Cargo.toml; cargo doc ; rm Cargo.toml"
  }
}
