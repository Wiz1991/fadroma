{
  "name": "@hackbg/fadroma",
  "version": "0.0.0",
  "type": "module",
  "workspace": true,
  "packages": [
    "./ops",
    "./ops-scrt",
    "./ops-scrt-1.0",
    "./ops-scrt-1.2",
    "./platforms/ganesha",
    "./platforms/scrt-1.0/cosmwasm-js/packages/sdk",
    "./platforms/scrt-1.2/cosmwasm-js/packages/sdk",
    "./tools",
    "./test"
  ],
  "devDependencies": {
    "@hackbg/ganesha": "workspace:*",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "documentation": "^13.2.5",
    "mocha": "^8.4.0",
    "typedoc": "^0.21.9"
  },
  "dependencies": {
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.11.6",
    "@types/prettyjson": "^0.0.30",
    "@types/rimraf": "^3.0.2",
    "bignumber.js": "^9.0.1"
  },
  "scripts": {
    "docs:js": "documentation build scrt-js/** -f html --github -o doc/scrt-js",
    "docs:rs": "cp Workspace.toml Cargo.toml; cargo doc; rm Cargo.toml",
    "docs:ts": "typedoc --out doc/typedoc --exclude **/*+(index|.spec|.e2e).ts js/sys js/net js/cli js/agent js/builder js/ensemble",
    "docs:serve": "documentation serve --watch js/**",
    "test:rs": "cp Workspace.toml Cargo.toml; cargo test; rm Cargo.toml",
    "test:tap": "cd test && pnpm test",
    "test:ts": "DEBUG=out ganesha run-module --async-stack-traces --enable-source-maps test/test.mjs"
  }
}
